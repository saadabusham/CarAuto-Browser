<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.technzone.car_auto_browser">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="31"/>
<!--        tools:ignore="GradleOverrides" />-->
    <application
        android:name="com.technzone.car_auto_browser.common.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="allowBackup">
        <meta-data android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc"/>
        <activity android:name="com.technzone.car_auto_browser.ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.technzone.car_auto_browser.ui.auth.AuthActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
        <activity
            android:name="com.technzone.car_auto_browser.ui.auth.forgetpassword.ForgetPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
        <activity
            android:name="com.technzone.car_auto_browser.ui.auth.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
        <activity
            android:name="com.technzone.car_auto_browser.ui.common.countrypicker.activity.CountriesPickerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
        <activity
            android:name="com.technzone.car_auto_browser.ui.webview.WebViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:exported="true"/>
    </application>

</manifest>